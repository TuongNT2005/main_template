.MODEL small

DRAW_BORDER_FUNC MACRO
        
    MOV ah,9
	LEA dx, mapHorizontalBorder
	INT 21h
	LEA dx, mapVerticalBorder
	INT 21h
	LEA dx, mapHorizontalBorder
	INT 21h

DRAW_BORDER_FUNC ENDM


DRAW_MENU_FUNC MACRO
    
    	MOV ah, 2   	;choose setup cusor opstion
	MOV dh, 12   	;dh: x position
	MOV dl, 35   	;dl: y position
	MOV bh, 0   	;bh: page
	INT 10h     	;execute setup cusor opstion
	PRINT "1. Play"
	MOV dh, 14   	;dh: x position
	MOV dl, 35   	;dl: y position
	INT 10h     	;execute setup cusor opstion
	PRINT "2. Guide"
    	MOV dh, 16   	;dh: x position
	MOV dl, 35   	;dl: y position
	INT 10h     	;execute setup cusor opstion
    	PRINT "3. Exit"    

DRAW_MENU_FUNC ENDM

DRAW_TITLE_FUNC MACRO

	LOCAL DRAW_TITLE_PIXCELS_LABEL

    LEA si, titlePositionX
    LEA di, titlePositionY        
            
    DRAW_TITLE_PIXCELS_LABEL:
	        MOV dh, [si]   	;dh: x position
	        MOV dl, [di]   	;dl: y position
	        MOV bh, 0   	;page number
	        MOV ah, 2   	;choose setup cusor opstion
	        INT 10h     	;execute setup cusor opstion
	        MOV al, 0DBh 	;hex code of char
	        MOV bh, 0    	;page number
	        MOV bl, 0Ah  	;color code
	        MOV cx, 1   	;number of char 
	        MOV ah, 09h  	;draw char mode
	        INT 10h      	;execute draw char
            INC si
            INC di
            DEC cnt_picels
            
            CMP cnt_picels,0
            JNE DRAW_TITLE_PIXCELS_LABEL
      
DRAW_TITLE_FUNC ENDM
